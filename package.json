{
  "name": "galipette-portal",
  "version": "0.0.1",
  "displayName": "Galipette Portal",
  "description": "A global application for the Galipette Cendree TTRPG platform",
  "author": {
    "name": "Quentin Lemasson",
    "email": "q.v.lemasson@gmail.com"
  },
  "contributors": [
    {
      "name": "Quentin Lemasson",
      "email": "q.v.lemasson@gmail.com"
    }
  ],
  "homepage": "/tbd",
  "bugs": "/tbd",
  "repository": {
    "type": "git",
    "url": "/tbd"
  },
  "keywords": [
    "galipette",
    "cendree",
    "ttrpg",
    "portal"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t galipette-portal .",
    "docker:run": "docker run --name galipette-portal -p 3000:80 galipette-portal",
    "docker:dev": "docker build -f Dockerfile.dev -t galipette-portal-dev . && docker run --name galipette-portal-dev -p 5173:5173 -v $(pwd):/app galipette-portal-dev",
    "podman:build": "podman build -t galipette-portal .",
    "podman:run": "podman run --name galipette-portal -p 3000:80 galipette-portal",
    "podman:dev": "powershell -ExecutionPolicy Bypass -File dev.ps1",
    "podman:compose": "podman-compose up --build",
    "container:build": "podman build -t galipette-portal .",
    "container:run": "podman run --name galipette-portal -p 3000:80 galipette-portal",
    "container:dev": "powershell -ExecutionPolicy Bypass -File dev.ps1",
    "container:compose": "podman-compose up --build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@reduxjs/toolkit": "^2.9.0",
    "@tailwindcss/vite": "^4.1.14",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
